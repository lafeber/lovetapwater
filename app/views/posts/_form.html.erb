<%= javascript_include_tag :ckeditor %>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%#= f.text_area :content %>
    <%= f.cktext_area :content, :width=>'600px', :heigth=>'200px' %>

  </p>
  <p>
    <%= f.label :published_at %><br />
    <%= f.datetime_select :published_at %>
  </p>
  <p>
    <%= label :check, :password %><br />
    <%= password_field :check, :password %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>